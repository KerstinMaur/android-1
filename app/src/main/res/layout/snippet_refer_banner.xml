<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/banner_refer_gradient">

    <ImageView
        android:id="@+id/snippet_refer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_refer_image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@id/snippet_refer_icon"
        android:layout_toRightOf="@+id/snippet_refer_icon"
        android:layout_toEndOf="@id/snippet_refer_icon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/refer_friend_banner_title"
            tools:text="REFER A FRIEND. GET 30 DAYS FREE."
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:lineSpacingExtra="5.5sp"
            android:layout_marginTop="4dp"
            android:text="@string/refer_friend_banner_details"
            tools:text="Refer your friends and family. For every sign up weâ€™ll give you both 30 days free."
            />

        <Button
            android:layout_height="25dp"
            android:layout_width="96dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentTop="true"
            android:id="@+id/snippet_refer_button"
            style="@style/PiaxWhiteButton"
            android:text="@string/refer_friend_button"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

</RelativeLayout>